{
  "name": "@marcusrbrown/gala-chain-code",
  "version": "0.1.0",
  "description": "Experiments with GalaChain",
  "main": "lib/src/index.js",
  "types": "lib/src/index.d.ts",
  "scripts": {
    "start": "node lib/src/cli.js start",
    "clean": "tsc -b --clean",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json -w",
    "lint": "eslint . --ext .ts,.js",
    "fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier . --write",
    "prepublishOnly": "npm run format && npm run build && npm run lint && npm run test",
    "network:start": "galachain network:up -C=product-channel -t=curator -n=basic-product -d=./ --envConfig=./.dev-env --watch",
    "network:prune": "galachain network:prune",
    "network:recreate": "npm run network:prune && rm -rf ./test-network && npm run network:start",
    "test": "jest",
    "test:e2e": "jest --config=e2e/jest.config.js",
    "start-network-for-ci": "(npm run network:start || true) &",
    "update-test-snapshots": "npm run test -- -u",
    "update-test-e2e-snapshots": "npm run test:e2e -- -u",
    "update-snapshots": "npm run start-network-for-ci && npm run update-test-snapshots && sleep 90 && npm run update-test-e2e-snapshots && npm run network:prune || true"
  },
  "dependencies": {
    "@gala-chain/api": "1.0.14",
    "@gala-chain/chaincode": "1.0.14",
    "dotenv": "16.4.5",
    "fabric-contract-api": "2.4.2",
    "fabric-shim": "2.4.2"
  },
  "devDependencies": {
    "@gala-chain/cli": "1.0.14",
    "@gala-chain/client": "1.0.14",
    "@gala-chain/test": "1.0.14",
    "@types/jest": "28.1.8",
    "@types/node": "18.19.18",
    "@typescript-eslint/eslint-plugin": "7.0.2",
    "@typescript-eslint/parser": "7.0.2",
    "axios": "1.6.7",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-prettier-config": "1.0.1",
    "jest": "28.1.3",
    "prettier": "3.2.5",
    "ts-jest": "28.0.8",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  }
}
